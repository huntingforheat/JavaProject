	String pw = (String)session.getAttribute("user_pw");
	String newpw= request.getParameter("newpw");
	
	UsersDAO dao = UsersDAO.getInstance();
	UsersVO vo = new UsersVO(null, newpw, null, null, null, null);
	
	int result = dao.change_pw(vo);
	
	if(result == 1) {
		session.setAttribute("user_pw", newpw);
	%>
		<script>
